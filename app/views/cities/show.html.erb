<div class="container">
	<div class="row">
		<div class="col-sm-10 col-sm-offset-1">
			<h1><%= @city.city_name %> <%= link_to "Add New Review", new_review_path(@city.id), class:"btn-sm btn-default pull-right" %></h1>
				
			<br>
		</div>
	</div>
</div>
<br>
<div class="container">	
	<div class="row">
		<div class="col-sm-8 col-sm-offset-2">

			<% @city.reviews.reverse.each do |review| %>
				<div class="panel panel-default">
					<div class="panel-body">
						<h3><%= review.title %></h3>
						<%= link_to "View Review", review_path(review), class:"pull-right" %>
						<h5>Authored by: <a href="/reviews/<%= review.user.id %>"><%= review.user.first_name %></a></h5><br> 
						<p><%= review.body %></p>
					</div>
				</div>
			<% end %>
		</div>
	</div>
</div>