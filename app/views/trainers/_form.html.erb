
			<%= form_for @trainer, url:{action: "create"}, :html => { :multipart => true }, class: "form-group" do |f|  %>

			<%= f.label :first_name %>
			<%= f.text_field :first_name, placeholder: "First Name", class: "form-control", :required => true, :autofocus => true %><br>

			<%= f.label :last_name %>
			<%= f.text_field :last_name, placeholder: "Last Name", class: "form-control", :required => true %><br>

			<%= f.label :username %>
			<%= f.text_field :username, placeholder: "Username", class: "form-control", :required => true %><br>
			
			<%= f.label :city_name %>
			<%= f.text_field :city_name, placeholder: "Username", class: "form-control", :required => true %><br>

			<%= f.label :email %>
			<%= f.text_field :email, placeholder: "Email", class: "form-control", :required => true %><br>

			<%= f.label :password, "Password" %>
			<%= f.password_field :password, placeholder: "Password", class: "form-control", :required => true %><br>

			<%= f.label :password, "Retype Password" %>:
      		<%= f.password_field :password_confirmation, placeholder: " Retype Password", class: "form-control", :required => true %><br>

			<%= f.label :profile_image %>
			<%= f.file_field :avatar %>

			<br>
			<center>
				<%= f.submit "Save Trainer", class: "btn btn-primary" %>
			</center>
			<br>

			<% end %>
			<% flash.each do |name, msg| -%>
				<%= content_tag :div, msg, class: "alert #{name == 'error' ? 'alert-danger' : 'alert-notice'}" %>
			<% end %>	